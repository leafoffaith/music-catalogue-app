<%- include('partials/header')%>
<div class="ui main text container segment">
    <div class="ui huge header">New Album</div>
        <form class="ui form" action="/albums" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="catalog[title]" placeholder="title">
            </div>
            <div class="field">
                <label>Artist</label>
                <input type="text" name="catalog[artist]" placeholder="artist">
            </div>
            <div class="field">
                <label>Album Art</label>
                <input type="text" name="catalog[art]" placeholder="enter URL">
            </div>
            <div class="field">
                <label for="description">Description</label>
                <textarea name="catalog[body]" id="description" placeholder="Something about this album" cols="30" rows="10"></textarea>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
</div>
<%- include('partials/footer')%>
