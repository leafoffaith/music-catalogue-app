<%- include('partials/header')%>
<div class="ui main text container segment">
    <a href="/albums"><i class="arrow circle left outline icon black"></i></a>
    <div class="ui huge header">New Album</div>
        <form class="ui form" action="/albums" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="title" placeholder="title">
            </div>
            <div class="field">
                <label>Artist</label>
                <input type="text" name="artist" placeholder="artist">
            </div>
            <div class="field">
                <label>Album Art</label>
                <input type="text" name="art" placeholder="enter URL">
            </div>
            <div class="field">
                <label for="description">Description</label>
                <textarea name="postBody" id="description" placeholder="Something about this album" cols="30" rows="10"></textarea>
            </div>
            <input class="ui violet big button" value="Submit" type="submit">
        </form>
</div>
<%- include('partials/footer')%>
