<%- include('partials/header')%>

<div class="ui main text container segment">
    <a href="/albums"><i class="arrow circle left outline icon black"></i></a>
    <div class="ui huge header">Edit Album</div>
    <form class="ui form" action="/albums/<%=catalog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="catalog[title]" value="<%=catalog.title%>" placeholder="title">
            </div>
            <div class="field">
                <label>Artist</label>
                <input type="text" name="catalog[artist]" value="<%=catalog.artist%>" placeholder="artist">
            </div>
            <div class="field">
                <label>Album Art</label>
                <input type="text" name="catalog[art]" value="<%=catalog.art%>" placeholder="enter URL">
            </div>
            <div class="field">
                <label>description</label>
                <textarea name="catalog[body]" id="description" placeholder="Something about this album" cols="30" rows="10"><%=catalog.body%>
                </textarea>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
</div>  
<%- include('partials/footer')%>
